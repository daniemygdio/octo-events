<h1><%= @events.model_name.human %></h1>

<p>Number of events by action</p>
<% events_by_action = number_of_events_by_action(@events).each %>
<table>
  <thead>
    <tr>
        <% events_by_action.each do | key, value | %>
        <th><%= key %></th>
        <% end %>
    </tr>
  </thead>

  <tbody>
      <tr>
        <% events_by_action.each do | key, value | %>
          <td><%= value %></td>
        <% end %>
      </tr>
  </tbody>
</table>
<br>
<table>
  <thead>
    <tr>
      <th><%= @events.human_attribute_name(:github_action) %></th>
      <th><%= @events.human_attribute_name(:issue_id) %></th>
      <th><%= @events.human_attribute_name(:created_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.github_action %></td>
        <td><%= event.issue_id %></td>
        <td><%= event.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>